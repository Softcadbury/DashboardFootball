<style>
    table {
        margin-bottom: 15px;
    }
    
    table, th, td {
        border-collapse: collapse;
        border: 1px solid gray;
    }
</style>

<table>
    <tr>
        <th title="Position">#</th>
        <th title="Player name">Name</th>
        <th title="Team">Team</th>
        <th title="Goals">Goals</th>
        <th title="Matches played">Pld</th>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.rank}}</td>
        <td>{{this.name}}</td>
        <td>{{this.team}}</td>
        <td>{{this.goals}}</td>
        <td>{{this.played}}</td>
    </tr>
    {{/each}}
</table>