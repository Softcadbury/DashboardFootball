<table class="component component-big">
    <tr>
        <td colspan="5">
            <div class="component-title">
                <h1>Top Scorers</h1>
            </div>
        </td>
    </tr>
    <tr>
        <th title="Position">#</th>
        <th class="component-main-column" title="Player name">Name</th>
        <th class="component-main-column" title="Team">Team</th>
        <th title="Goals">Goals</th>
        <th title="Matches played">Pld</th>
    </tr>
    {{#each scorersData}}
    <tr>
        <td>{{this.rank}}</td>
        <td class="component-main-column">
            <span>{{this.name}}</span>
        </td>
        <td class="component-main-column">
            <span>{{this.team}}</span>
        </td>
        <td>{{this.goals}}</td>
        <td>{{this.played}}</td>
    </tr>
    {{/each}}
</table>