{{#if assistsData.length}}
<div class="component-container">
    <table class="component component-big">
        <tr>
            <td colspan="5">
                <div class="component-title">
                    <h3>Top Assists</h3>
                </div>
            </td>
        </tr>
        <tr>
            <th title="Position">#</th>
            <th class="component-column-main" title="Player name">Name</th>
            <th class="component-column-main" title="Country">Country</th>
            <th class="component-column-main" title="Team">Team</th>
            <th title="Assists">Assists</th>
        </tr>
        {{#each assistsData}}
        <tr>
            <td>{{this.rank}}</td>
            <td class="component-column-main">
                <span title="{{this.name}}">{{this.name}}</span>
            </td>
            <td class="component-column-main component-column-country">
                <img src="/images/flags/{{this.flag}}.png" title="{{this.country}}" alt="{{this.country}} flag" />
                <span title="{{this.country}}">{{this.country}}</span>
            </td>
            <td class="component-column-main">
                <img src="/images/logos/{{this.logo}}.png" title="{{this.team}}" alt="{{this.team}} logo" />
                <span title="{{this.team}}">{{this.team}}</span>
            </td>
            <td>{{this.assists}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}