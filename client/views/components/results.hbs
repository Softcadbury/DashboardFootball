<table class="component component-large">
    <tr>
        <td colspan="10">
            <div class="component-title">
                <h1>Results</h1>
            </div>
        </td>
    </tr>
    <tr><th title="Date">Date</th>
        <th class="component-main-column"></th>
        <th title="Score">Score</th>
        <th class="component-main-column"></th>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.date}}</td>
        <td class="component-main-column component-right-column">
            <span>{{this.homeTeam}}</span>
            <img src={{this.logoHomeTeam}} onerror="this.style.display='none'" />
        </td>
        <td>{{this.score}}</td>
        <td class="component-main-column">
            <img src={{this.logoAwayTeam}} onerror="this.style.display='none'" />
            <span>{{this.awayTeam}}</span>
        </td>
    </tr>
    {{/each}}
</table>