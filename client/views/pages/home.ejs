<div id="home">
    <div class="title-main">
        <h1>Football Peek</h1>
        <h3>The quickest access to football results</h3>
    </div>
    <div class="cards">
        <% items.forEach((item) => { %>
            <a class="card card-clickable" href="/<%= item.code %>">
                <div class="card-icon icon-<%= item.code %>"></div>
                <div class="card-title">
                    <h2><%= item.name %></h2>
                </div>
            </a>
        <% }); %>
    </div>
    <%- include('../commons/ad') %>
    <div class="card component">
        <table class="component-table">
            <tbody>
                <% matchesData.forEach((matche) => { %>
                    <% var currentDate; %>
                    <tr>
                        <td class="data-date data-hide">
                            <% if (currentDate !== matche.date) { %>
                                <%= matche.date %>
                                <% currentDate = matche.date; %>
                            <% } %>
                        </td>
                        <td class="align-to-right">
                            <span title="<%= matche.homeTeam %>">
                                <%= matche.homeTeam %>
                            </span>
                        </td>
                        <td class="data-min">
                            <div class="icon-logo icon-<%= matche.homeTeamLogo %>" title="<%= matche.homeTeam %>"></div>
                        </td>
                        <td class="data-score">
                            <%- include('../components/score', {
                                date: matche.date,
                                score: matche.score,
                                team1: matche.homeTeam,
                                team2: matche.awayTeam }); %>
                        </td>
                        <td class="data-min">
                            <div class="icon-logo icon-<%= matche.awayTeamLogo %>" title="<%= matche.awayTeam %>"></div>
                        </td>
                        <td>
                            <span title="<%= matche.awayTeam %>">
                                <%= matche.awayTeam %>
                            </span>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>