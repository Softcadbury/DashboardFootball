<div id="home">
    <div class="title-main">
        <h1>Football Peek</h1>
        <h3>The quickest access to football results</h3>
    </div>
    <div class="cards">
        <% items.forEach((item) => { %>
            <a class="card card-clickable" href="/<%= item.code %>">
                <div class="card-icon icon-<%= item.code %>"></div>
                <div class="card-title">
                    <h2><%= item.name %></h2>
                </div>
            </a>
        <% }); %>
    </div>
    <%- include('../commons/ad') %>
    <% itemsMatches.forEach((itemMatches) => { %>
        <div class="card component">
            <h3 class="component-title"><%= itemMatches.item.name %></h3>
            <table class="component-table">
                <tbody>
                    <% var currentDate; %>
                    <% itemMatches.matches.forEach((matche) => { %>
                        <%- include('../components/matche', {
                            date: currentDate !== matche.date ? matche.date : '',
                            score: matche.score,
                            homeTeam: matche.homeTeam,
                            awayTeam: matche.awayTeam,
                            homeTeamLogo: matche.homeTeamLogo,
                            awayTeamLogo: matche.awayTeamLogo 
                        }); %>
                        <% if (currentDate !== matche.date) {
                            currentDate = matche.date;
                        } %>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% }); %>
</div>